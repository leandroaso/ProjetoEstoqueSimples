<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="/Produto/Cadastro" method="post">
            <h3 class="text-center">Cadastro de Produtos</h3>
            <br />
            <input type="hidden" name="produto.ID" value="@ViewBag.Produto.ID" />
            <div class="form-group col-md-6">
                <label for="Nome">Nome:</label>
                <input type="text" name="produto.Nome" class="form-control input-sm" value="@ViewBag.Produto.Nome" required/>
            </div>
            <div class="form-group col-md-6">
                <label for="Descricao">Descricao:</label>
                <input type="text" name="produto.Descricao" class="form-control input-sm" value="@ViewBag.Produto.Descricao" />
            </div>
            <div class="form-group col-md-6">
                <label for="Quantidade">Quantidade:</label>
                <input type="text" name="produto.Quantidade" class="form-control input-sm" value="@ViewBag.Produto.Quantidade" />
            </div>
            <div class="form-group col-md-6">
                <label for="CategoriaId">Categoria:</label>
                <select class="form-control input-sm" name="produto.CategoriaId" required>
                    @foreach (var categoria in ViewBag.Categorias)
                    {
                        <option value="@categoria.ID" selected="@categoria.ID.Equals(ViewBag.Produto.CategoriaId)" aaa="" >@categoria.Nome</option>
                    }
                </select>
            </div>
            <div class="form-group col-md-12">
                <p class="pull-right">
                    <button type="submit" class="btn btn-success btn-sm">Salvar</button>
                    <a href="/Produto" class="btn btn-default btn-sm">Voltar</a>
                </p>
            </div>
        </form>

    </div>
</div>


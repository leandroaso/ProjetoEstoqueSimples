
<a href="/Usuario/Novo" class="btn btn-success pull-right border-0">Adicionar</a>
<h4>Lista de Usuarios</h4>

<table class="table table-hover table-style text-center">
    <thead>
        <tr>
            <th class="col-md-1">Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th class="col-md-1">Acoes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in ViewBag.Usuarios)
        {
            <tr id="tr@(usuario.ID)">
                <td>@usuario.ID</td>
                <td>@usuario.Nome</td>
                <td>@usuario.Login</td>
                <td>
                    <a href="/Usuario/Novo/@usuario.ID" class="btn btn-warning btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <button type="button" onclick="deleteTr(@usuario.ID)" class="btn btn-sm btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>


    function deleteTr(id) {
        swal({
            title: "Você tem certeza?",
            text: "Você tem certeza que deseja fazer essa alteração!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Sim",
            cancelButtonText: "Não",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {

                    $.ajax({
                        type: "post",
                        url: "/Usuario/Remove",
                        data: { id: id },
                        success: function (data) {
                            $("#tr" + data).remove();
                            swal("Deletado!", "Operação realizada com sucesso.", "success");
                        },
                        error: function (data) {
                            console.log(data);
                            swal("Erro", "Erro ao tenta excluir:" + data, "error");
                        }

                    });
                } else {
                    swal("Cancelado", "Operação realizada com sucesso.", "error");
                }
            });

    }

</script>
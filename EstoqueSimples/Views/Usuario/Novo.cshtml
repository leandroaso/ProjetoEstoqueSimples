<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="/Usuario/Cadastro" method="post">
            <h3 class="text-center">Cadastro de Usuários</h3>
            <br />
            <input type="hidden" name="usuario.ID" value="@ViewBag.Usuario.ID" />
            <div class="form-group col-md-6">
                <label for="Nome">Nome:</label>
                <input type="text" name="usuario.Nome" class="form-control input-sm" value="@ViewBag.Usuario.Nome" required/>
            </div>
            <div class="form-group col-md-6">
                <label for="Login">Login:</label>
                <input type="text" name="usuario.Login" class="form-control input-sm" value="@ViewBag.Usuario.Login" required/>
            </div>
            <div class="form-group col-md-6">
                <label for="Senha">Senha:</label>
                <input type="password" name="usuario.Senha" class="form-control input-sm" id="s1" value="@ViewBag.Usuario.Senha" required/>
            </div>
            <div class="form-group col-md-6">
                <label for="s2">Confirmar senha:</label>
                <input type="password" class="form-control input-sm" id="s2" value="@ViewBag.Usuario.Senha" required />
            </div>
            <div class="form-group col-md-6">
                <label for="Admin">Admin:
                    <input type="checkbox" name="usuario.Admin" value="true" checked="@ViewBag.Usuario.Admin.Equals(true)" />
                </label>
            </div>

            <div class="form-group col-md-12">
                <p class="pull-right">
                    <button type="submit" class="btn btn-success btn-sm">Salvar</button>
                    <a href="/Usuario" class="btn btn-default btn-sm">Voltar</a>
                </p>
            </div>
        </form>

    </div>
</div>

<script>
    $(document).ready(function () {
        $("#s2, #s1").blur(function () {
            var s1 = $("#s1");
            var s2 = $("#s2");
            if (s2.val() != "" && s1.val() != "" && s1.val() != s2.val()) {
                swal("Atenção!", "O campo Confirmar senha não esta igual ao campo Senha");
                s2.val("");
            }
        });

    });
</script>

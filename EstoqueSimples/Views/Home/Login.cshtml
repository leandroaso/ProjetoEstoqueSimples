
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <title>Login</title>


    <style>
        .login 
        {
        background-color: white;
        margin-top: 5%;
        padding-right: 40px;
        padding-left: 40px;
        padding-bottom: 40px;
        padding-top: 10px;
        border-radius: 5px;
        margin-top: 5%;
        }
    </style>
</head>
<body style="background-color:#DCDCDC">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 login" >
                <form action="@Url.Action("Login", "Home")" method="post">
                    <div class="form-group">
                        @if (ViewBag.Erro.Equals(true))
                        {
                            <div class="alert alert-danger text-center" id="danger-alert">
                                <button type="button" class="close" data-dismiss="alert">x</button>
                                Login ou Senha esta incorreto!
                            </div>

                            <script>
                                $("#danger-alert").alert();
                                window.setTimeout(function () {
                                    $("#danger-alert").alert('close');
                                }, 5000);
                            </script>
                        }
                    </div>
                    <p class="text-center"><i class="fa fa-cubes" aria-hidden="true" style="font-size: 6em;color: #5cb85c;"></i></p>
                    <div class="form-group">
                        <label for="Login">Login:</label>
                        <input type="text" name="Login" class="form-control input-sm" value="" required/>
                    </div>
                    <div class="form-group">
                        <label for="Senha">Senha:</label>
                        <input type="password" name="Senha" class="form-control input-sm" value="" required/>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success btn-block">Logar</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
